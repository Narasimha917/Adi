    <script>
        // Mail Open Animation on Page Load
        window.onload = function() {
            setTimeout(() => {
                document.getElementById('envelope').classList.add('open');  // Envelope opens after 1 second
            }, 1000);
        }

        // Open the Birthday Card after Mail Open Effect
        function startMailOpen() {
            document.getElementById('birthday-card').style.display = 'block';
            document.getElementById('birthday-card').style.opacity = '1';
            document.getElementById('birthday-card').style.transform = 'scale(1)';
            document.getElementById('open-button').style.display = 'none';  // Hide the button
            document.getElementById('envelope').style.display = 'none';  // Hide the envelope

            // Attach Instagram Link to "Yours Love"
            document.getElementById('yours-love').onclick = function() {
                window.open("https://www.instagram.com/narasimhanaidu55?igsh=c3cwbTE3eW5ocXZn", "_blank");
            };
        }
    </script>
